<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#2E3B55" /> <!-- pressed background color -->
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="#60A5FA" /> <!-- blue stroke on press -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1E293B" /> <!-- default background -->
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="#334155" /> <!-- subtle border -->
        </shape>
    </item>

</selector>
